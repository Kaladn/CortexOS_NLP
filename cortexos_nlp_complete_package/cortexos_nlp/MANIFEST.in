# CortexOS NLP - Package Manifest
# Include additional files in the distribution package

include README.md
include LICENSE
include requirements.txt
include MANIFEST.in

# Documentation
recursive-include docs *.md *.rst *.txt
recursive-include docs *.png *.jpg *.svg

# Tests
recursive-include tests *.py
recursive-include tests *.txt *.json

# Data files
recursive-include cortexos_nlp/data *.json *.txt *.bin
recursive-include cortexos_nlp/models *.json *.bin

# Configuration files
include *.cfg *.ini *.toml *.yaml *.yml

# Exclude development files
exclude .gitignore
exclude .github
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.so
recursive-exclude * .DS_Store

